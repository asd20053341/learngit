<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.bsk.update1.MainActivity$PlaceholderFragment" >

    
    	<LinearLayout 
    	    android:id="@+id/top_ly"
	        android:layout_width="match_parent"
		    android:layout_height="wrap_content"
	        android:orientation="vertical"
	        android:gravity="center"
	        >
	        
    	    <TextView
	            android:id="@+id/version_tv"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="您目前的系统版本是v1.0.0.0"
		        android:textSize="20sp"
		         />
    	    
    	    <TextView
	            android:id="@+id/tip_tv"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="您当前版本是最新版本"
		        android:textColor="#ff0000"
		        android:textSize="20sp"
		         />
    	    
    	    <Button
	            android:id="@+id/check_btn"
		        android:layout_width="480dp"
		        android:layout_height="wrap_content"
		        android:layout_margin="24dp"
		        android:text="检测新版本"
		        android:textSize="22sp"
		         />
    	    
    	</LinearLayout>    
    	
    	
    	<RelativeLayout 
    	    android:id="@+id/download_status_ly"
    	    android:layout_width="480dp"
		    android:layout_height="140dp"
		    android:layout_margin="18dp"
		    android:background="#555555"
    	    >
    	    
    	    <TextView
		        android:id="@+id/download_size"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_centerHorizontal="true"
		        android:layout_alignParentTop="true"
		        android:ellipsize="end"
		        android:singleLine="true"
		        android:textSize="20sp"
		        android:text="" />
    	    
    	    <ProgressBar
		        android:id="@+id/download_progress"
		        style="?android:attr/progressBarStyleHorizontal"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_below="@+id/download_size"
		        android:layout_marginLeft="20dp"
		        android:layout_marginRight="50dp"
		         />
    	    
    	    <TextView
		        android:id="@+id/download_precent"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_centerHorizontal="true"
		        android:layout_below="@id/download_progress"
		        android:ellipsize="end"
		        android:singleLine="true"
		        android:textSize="20sp"
		        android:text="" />
    	    
    	    <TextView
		        android:id="@+id/download_tip"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_alignParentBottom="true"
		        android:layout_centerHorizontal="true"
		        android:textSize="20sp"
		        android:textColor="#ff0000" />
    	    
    	</RelativeLayout>
        
        <LinearLayout 
	        android:layout_width="match_parent"
		    android:layout_height="wrap_content"
	        android:orientation="horizontal"
	        android:gravity="center"
	        >
	        
	        <Button
	            android:id="@+id/download_btn"
		        android:layout_width="240dp"
		        android:layout_height="100dp"
		        android:text="下 载"
		        android:textSize="28sp"
		         />
	        
	        <Button
	            android:id="@+id/upgrade_btn"
		        android:layout_width="240dp"
		        android:layout_height="100dp"
		        android:text="@string/menu_update"
		        android:textSize="28sp"
		         />
        
    	</LinearLayout>

</LinearLayout>
